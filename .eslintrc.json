{
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ],
    "tsconfigRootDir": "./"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "import/prefer-default-export": "off",
    "@typescript-eslint/indent": [
      "error",
      4
    ],
    "@typescript-eslint/return-await": [
      "error",
      "always"
    ]
  },
  "ignorePatterns": [
    "src/utils/DB/**/*.ts",
    "src/test/routes/*.test.ts"
  ]
}
